<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EvalComp_PUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>alexandre.evalcomp.metier.modele.Apprenant</class>
    <class>alexandre.evalcomp.metier.modele.CompetenceG</class>
    <class>alexandre.evalcomp.metier.modele.CompetenceS</class>
    <class>alexandre.evalcomp.metier.modele.Formation</class>
    <class>alexandre.evalcomp.metier.modele.Grade</class>
    <class>alexandre.evalcomp.metier.modele.MiseEnSituation</class>
    <class>alexandre.evalcomp.metier.modele.Personne</class>
    <class>alexandre.evalcomp.metier.modele.Regle</class>
    <class>alexandre.evalcomp.metier.modele.Score</class>
    <class>alexandre.evalcomp.metier.modele.RulePattern</class>
    <class>alexandre.evalcomp.metier.modele.AutoEvaluation</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/EvalComp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
